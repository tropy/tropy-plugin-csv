{
  "name": "tropy-plugin-csv",
  "version": "2.1.0",
  "description": "Tropy to CSV Export Plugin",
  "main": "index.js",
  "scripts": {
    "test": "electron-mocha --renderer test",
    "lint": "eslint --color index.js test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inukshuk/tropy-plugin-csv.git"
  },
  "keywords": [
    "tropy",
    "csv"
  ],
  "author": "Sylvester Keil <sylvester@keil.or.at>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/inukshuk/tropy-plugin-csv/issues"
  },
  "homepage": "https://github.com/inukshuk/tropy-plugin-csv#readme",
  "hooks": {
    "export": true,
    "import": true
  },
  "options": [
    {
      "field": "tags",
      "label": "Include tags?",
      "type": "boolean",
      "default": true
    },
    {
      "field": "photoMetadata",
      "label": "Include photo metadata?",
      "type": "boolean",
      "default": false
    },
    {
      "field": "photoTemplate",
      "label": "Photo  Template",
      "type": "template",
      "hint": "The id of the Tropy template to use for photos. The template determines which fields will be exported. If left empty, the template for the first item's first photo will be used."
    },
    {
      "field": "photoNotes",
      "label": "Include photo notes?",
      "type": "boolean",
      "default": true
    },
    {
      "field": "quotes",
      "label": "Wrap values with quotes?",
      "type": "boolean",
      "default": true
    },
    {
      "field": "clipboard",
      "label": "Copy to clipboard?",
      "type": "boolean",
      "default": false
    },
    {
      "field": "itemTemplate",
      "label": "Item Template",
      "type": "template",
      "hint": "The id of the Tropy template to use for items. The template determines which fields will be exported. If left empty, the first item's template will be used."
    },
    {
      "field": "file",
      "type": "save-file",
      "label": "Save as"
    }
  ],
  "devDependencies": {
    "electron": "^10.1.1",
    "electron-mocha": "^9.1.0",
    "eslint": "^8.14.0"
  }
}
